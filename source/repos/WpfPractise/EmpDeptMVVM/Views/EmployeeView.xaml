        <DataGrid x:Name="dg" ItemsSource="{Binding Path=Employees}" HorizontalAlignment="Left" Height="237" Margin="10,226,0,-44" VerticalAlignment="Top" Width="337" AutoGenerateColumns="True" ColumnWidth="*"/>
