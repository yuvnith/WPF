<Window x:Class="WpfPractise.ADO.Connected.Employee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPractise.ADO.Connected"
        mc:Ignorable="d"
        Title="Employee" Height="425.771" Width="663.39" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <HierarchicalDataTemplate DataType="{x:Type local:Temp}" ItemsSource="{Binding Det}">
            <TextBlock Text="{Binding EName}"></TextBlock>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid Margin="0,0,9,1" >
        <Label Content="Employee No" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,31,0,0"/>
        <Label Content="Salary" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,62,0,0"/>
        <TextBox x:Name="inp_no" HorizontalAlignment="Left" Height="23" Margin="86,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="inp_name" HorizontalAlignment="Left" Height="23" Margin="86,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="inp_salary" HorizontalAlignment="Left" Height="23" Margin="86,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_add" Content="ADD" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Width="75" Click="btn_add_Click"/>
        <Button x:Name="btn_update" Content="UPDATE" HorizontalAlignment="Left" Margin="96,106,0,0" VerticalAlignment="Top" Width="75" Click="btn_update_Click"/>
        <Button Content="DELETE" HorizontalAlignment="Left" Margin="183,106,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="btn_display" Content="DISPLAY" HorizontalAlignment="Left" Margin="272,106,0,0" VerticalAlignment="Top" Width="75" Click="btn_display_Click"/>
        <DataGrid x:Name="dg" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="237" Margin="10,147,0,0" VerticalAlignment="Top" Width="337">
           </DataGrid>
        <Button x:Name="btn_search" Content="SEARCH" HorizontalAlignment="Left" Margin="229,6,0,0" VerticalAlignment="Top" Width="75" Click="btn_search_Click"/>
        <TreeView Name="tree" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="297" Margin="435,66,0,0" VerticalAlignment="Top" Width="189">

        </TreeView>

    </Grid>
</Window>
