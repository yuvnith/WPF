<Window x:Class="WpfPractise.DataGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPractise"
        mc:Ignorable="d"
        Title="DataGrid" Height="327.768" Width="300">
    <Grid Margin="0,0,0,2">
        <DataGrid Name="Dg1" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="161" Margin="23,113,0,0" VerticalAlignment="Top" Width="252"/>
        <TextBox Name="Id" HorizontalAlignment="Left" Height="23" Margin="23,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox  Name="Name"  HorizontalAlignment="Left" Height="23" Margin="155,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Location" HorizontalAlignment="Left" Height="23" Margin="23,46,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Age" HorizontalAlignment="Left" Height="23" Margin="155,46,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Name="Add" Content="Add" HorizontalAlignment="Left" Margin="200,82,0,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>

    </Grid>
</Window>
