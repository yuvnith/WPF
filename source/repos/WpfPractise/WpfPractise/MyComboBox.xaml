<UserControl x:Class="WpfPractise.MyComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPractise"
             x:Name="MyCustomComboBox"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="50,79,0,0" TextWrapping="Wrap" Name="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="||" HorizontalAlignment="Left" Margin="170,79,0,0" Click="Button_OnClick" Name="Button" VerticalAlignment="Top" Width="22" Height="23"/>
        <ListBox Name="Listbox" Margin="50,102,117,35" SelectionChanged="Listbox_OnSelectionChanged" Visibility="Hidden" />
    </Grid>
</UserControl>
